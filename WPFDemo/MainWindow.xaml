<Window x:Class="WPFDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="514" Width="525">
    <Grid>
        <Label Content="First: " HorizontalAlignment="Left" Margin="66,50,0,0" VerticalAlignment="Top" Width="117"/>
        <TextBox x:Name="txbFirstName" HorizontalAlignment="Left" Height="23" Margin="212,50,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258"/>
        <Label Content="Last: " HorizontalAlignment="Left" Margin="66,75,0,0" VerticalAlignment="Top" Width="117"/>
        <TextBox x:Name="txbLastName" HorizontalAlignment="Left" Height="23" Margin="212,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258"/>
        <Label Content="Student Num:" HorizontalAlignment="Left" Margin="66,100,0,0" VerticalAlignment="Top" Width="117"/>
        <TextBox x:Name="txbStudentNum" HorizontalAlignment="Left" Height="23" Margin="212,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258"/>
        <Label Content="Major:" HorizontalAlignment="Left" Margin="66,125,0,0" VerticalAlignment="Top" Width="117"/>
        <TextBox x:Name="txbMajor" HorizontalAlignment="Left" Height="23" Margin="212,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="258"/>
        <TextBlock x:Name="txbResults" HorizontalAlignment="Left" Margin="7,383,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="93" Width="499"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="180,337,0,0" VerticalAlignment="Top" Width="144" Click="btnSubmit_Click"/>
        <Label Content="Scores:" HorizontalAlignment="Left" Margin="66,155,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txbScore" HorizontalAlignment="Left" Height="23" Margin="337,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"/>
        <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" Margin="422,300,0,0" VerticalAlignment="Top" Width="48" Click="btnAdd_Click"/>
        <ListBox x:Name="lbScores" HorizontalAlignment="Left" Height="116" Margin="212,155,0,0" VerticalAlignment="Top" Width="258"/>
        <TextBox x:Name="txbTitle" HorizontalAlignment="Left" Height="23" Margin="212,297,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Title" HorizontalAlignment="Left" Margin="212,271,0,0" VerticalAlignment="Top"/>
        <Label Content="Score" HorizontalAlignment="Left" Margin="337,271,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
